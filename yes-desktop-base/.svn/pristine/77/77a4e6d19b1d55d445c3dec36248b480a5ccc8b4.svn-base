<div>
    <div class="widget-body">
        <form name="edit$form" class="schema-form" role="form"
              ng-submit="save(edit$form)">
              <label style="  margin-bottom: 0;margin-top: 3px;">{{model.uid?"编辑":"新建" | translate}}</label>
            <div class="buttons-wrap">
                <button type="submit" name="yes_temp_show_task" class="btn btn-sm btn-primary"
                        title=""><i class="fa fa-save bigger-110"></i> {{'保存' | translate}}
                </button>
                <div class="base-form selector-form clearfix">

                    <div class="form-group col-xs-12 col-sm-12">
                        <div class="col caption">
                            <label class="control-label required">
                                {{'接口名称' | translate}}
                            </label>
                        </div>
                        <div class="col content">
                            <ui-select ng-model="model.iid"
                                       theme="bootstrap"
                                       reset-search-input="true">
                                <ui-select-match placeholder="{{'请选择接口' | translate}}">{{$select.selected.name}}</ui-select-match>

                                <ui-select-choices
                                        repeat="item.value as item in interfaces | filter:$select.search">
                                    <div class="select2-item" ng-bind-html="item.name | highlight: $select.search"></div>
                                </ui-select-choices>
                            </ui-select>
                        </div>
                    </div>

                    <div ng-if='type == "SEND"' class="form-group col-xs-12 col-sm-12">
                        <div class="col caption">
                            <label class="control-label">
                                {{'URL' | translate}}
                            </label>
                        </div>
                        <div class="col content">
                            <input type="text" class="form-control" ng-model="model.url">
                        </div>
                    </div>

                    <div ng-if='type == "SEND"' class="form-group col-xs-12 col-sm-12">
                        <div class="col caption">
                            <label class="control-label required">
                                {{'方法' | translate}}
                            </label>
                        </div>
                        <div class="col content">
                            <input type="text" class="form-control" ng-model="model.method">
                        </div>
                    </div>

                    <div class="form-group col-xs-12 col-sm-12">
                        <div class="col caption">
                            <label class="control-label">
                                {{'账号' | translate}}
                            </label>
                        </div>
                        <div class="col content">
                            <input type="text" ng-model="model.aid" readonly class="form-control">
                        </div>
                    </div>

                    <div class="form-group col-xs-12 col-sm-12">
                        <div class="col caption">
                            <label class="control-label">
                                {{'密码' | translate}}
                            </label>
                        </div>
                        <div class="col content">
                            <input type="text" ng-model="model.key" class="form-control">
                        </div>
                    </div>

                </div>

            </div>
        </form>
    </div>
</div>