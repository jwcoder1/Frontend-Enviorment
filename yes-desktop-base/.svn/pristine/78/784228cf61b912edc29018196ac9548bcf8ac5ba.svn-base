@import 'bootstrap/variables';
@import "bootstrap/mixins";
.login-page {
  text-align: center;
  padding: @padding-large-vertical 0;
  display: table;
  width: 100%;
  height: 100%;
  background-color: #fff;
  .btn {
    padding: 6px 14px;
  }
  .form-control {
    padding: 6px 8px;
    height: 32px;
  }
  label {
    font-weight: normal;
  }
  .text-extra {
    line-height: 31px;
  }
  .login-banner-wrap {
    img {
      border-radius: 12px;
    }
  }
  .login-header-wrap {
    position: fixed;
    border-bottom: 1px solid #e3e3e3;
    width: 100%;
    text-align: left;
    top: 0;
    h3 {
      margin: 0;
      line-height: 74px;
      color: #3c3c3c;
    }
    .container {
      position: relative;
    }
    .links {
      position: absolute;
      right: 0;
      top: 50%;
      margin-top: -10px
    }
  }
  .login-footer-wrap {
    position: fixed;
    width: 100%;
    bottom: 0;
    left: 0;
    height: 120px;
    padding: 32px 0;
    background-color: #EBEBEB;
    .support {
      color: #666;
      font-size: 14px;
      line-height: 32px;
    }
    .copy-right {
      color: #bcbcbc;
      font-size: 10px;
      line-height: 24px;
    }
  }
  .login-container {
    a {
      color: @brand-primary;
      &:hover {
        color: lighten( @brand-primary, 10%);
      }
    }
    clear: both;
    display: table-cell;
    vertical-align: middle;
    margin: 0 auto;
    margin-top: @login-margin-top;
    text-align: left;
    max-width: @login-container-width;
    .clearfix();
    .container {
      max-width: 960px;
      margin-top: -44px;
    }
    // border: 1px solid red;
  }
  .login-box {
    width: @login-box-width;
  }
  .login-form-outer {
    text-align: center;
  }
  .login-form-wrap {
    border: 1px solid #e3e3e3;
    max-width: 300px;
    padding: 0 15px;
    text-align: left;
    margin: 0 auto;
  }
  .login-form-inner {
    padding-top: 8px;
    padding-bottom: 24px;
    h4 {
      font-weight: normal;
      color: #3c3c3c;
    }
    .row {
      padding: 8px 0;
    }
  }
  .login-container-inner {
    padding: @padding-large-vertical *2 0;
    .clearfix();
  }
  .login-footer {
    padding: @login-footer-padding-vertical 0;
    color: @login-footer-text-color;
    border-top: 1px solid @legend-border-color;
  }
  .row label.col-sm-12 {
    width: 100%;
    margin-top: 5px;
  }
  @media (max-width: 768px) {
    .login-container {
      margin-top: 40px;
    }
    .login-header-wrap {
      .links {
        display: none;
      }
    }
  }
  @media (max-width:992px) {
    .login-banner-wrap {
      display: none;
    }
  }
}