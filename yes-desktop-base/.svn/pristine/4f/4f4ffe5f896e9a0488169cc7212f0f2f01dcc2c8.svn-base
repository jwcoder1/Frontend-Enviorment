.cell, .cell1, .cell2, .cell3, .cell4, .cell5, .cell100 {
    float: left;
    width: 100%;
}

@base_width:35%;

.form-cells .col.caption {
    width: @base_width;
}

.form-cells .col.content {
    width: 100%-@base_width;
}

.make-layout(@max: 5) {
    .make-cell(1, @max);
    .make-cell(2, @max);
    .make-cell(3, @max);
    .make-cell(4, @max);
    .cell100 {
        width: 100%;
        .col.caption {
            width: @base_width/@max;
        }
        .col.content {
            width:100% - @base_width/@max;
        }

    }
}

.make-cell(@count: 1, @max)  when (@max >= @count) {
    @cell-name: ~"cell@{count}";
    .@{cell-name} {
        width: percentage(@count/@max);
        .col.caption {
            width: @base_width/@count;
        }
        .col.content {
            width: 100% - @base_width/@count;
        }
    }
}

.make-cell(@count: 1, @max)  when ( @count = 1) {
    @cell-name: ~"cell";
    .@{cell-name} {
        width: percentage(@count/@max);
    }
}
 

.layout-responsive.responsive-xs {
    &.max-2 {
        .make-layout(1);
    }
    &.max-3 {
        .make-layout(1);
