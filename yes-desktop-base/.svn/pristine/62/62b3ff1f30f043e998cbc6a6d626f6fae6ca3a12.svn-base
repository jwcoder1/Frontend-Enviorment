@import "../bootstrap/variables";
.nav-tabs > .tabc {
    & {
        height: 28px;
        float: left;
        position: relative;
    }
    & > a {
        position: absolute;
        top: 4px;
        padding: 0;
        right: 8px;
        cursor: pointer;
        border: 0;
        &:hover {
            background: transparent;
        }
    }
    & > li {
        float: left;
        height: 100%;
        margin-bottom: -1px;
    }
    & > li > a {
        border-radius: 4px;
        cursor: pointer;
        height: 100%;
        display: block;
        padding: 4px 30px 0px 10px;
        border: 1px solid #ddd;
        border-radius: @tab-border-radius @tab-border-radius 0 0;
        overflow: hidden;
        background: @white;
    }
    /*     &:first-child > li > a {
    padding: 3px 20px;
} */
    & > li.active {
        a,
        a:hover,
        a:focus {
            color: #555;
            font-weight: bold;
            cursor: default;
            background-color: #fff;
            border-bottom-color: transparent;
        }
    }
}

.tab-content-view {
    margin: 10px 0;
}

.tab-page .nav.nav-tabs {
    margin: 0 10px;
}

.tab-page .tab-content {
    margin-top: -1px;
    border-top: 1px solid #d7d7d7;
    /* overflow-x: hidden; */
}

.tab-page .tab-content-inner {
    position: relative;
    margin: 3.5px 10px;
}
